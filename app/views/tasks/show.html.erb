<div class="containter mt-5 d-flex justify-content-center">
  <div class="card" style="width: 18rem;">
    <div class="card-body">
      <h5 class="card-title"><%= @task.title %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Details:</h6>
      <p class="card-text"><%= @task.details %></p>
      <% if @task.completed %>
        <span class="badge badge-primary badge-pill mr-3">x</span>
      <% else %>
        <span class="badge badge-danger badge-pill mr-3">o</span>
      <% end %>
      <%= link_to 'Edit', edit_task_path %>
      <%= link_to 'All tasks', tasks_path %>
    </div>
  </div>
</div>
